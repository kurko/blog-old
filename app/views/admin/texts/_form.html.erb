<%= simple_form_for(@text, as: :text, url: { action: form_action }) do |f| %>

  <%= f.input :taxonomy_id, value_method: :id, collection: @taxonomies %><br />

  <%= f.input :title, as: :string %><br />
  <%= f.input :description, input_html: { rows: 4 } %><br />
  <%= f.input :content %><br />
  <%= f.submit "Save as draft" %>
  <%= f.submit "Publish" %>
<% end %>
